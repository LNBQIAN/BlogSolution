@model Blog_Solution.Web.Models.Account.LoginModel
@using Abp.Web.Mvc.Extensions
@{
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}
<div id="LoginArea" class="row">
    <div class="col-lg-12">
        <div class="well bs-component">
            <form id="LoginForm" class="form-horizontal" action="@(Url.Action("Login", "Account"))?returnUrl=@(ViewBag.returnUrl)" method="POST">
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>@L("LogIn")</legend>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" class="form-control" name="LoginName" placeholder="@L("Account.LoginName")" required maxlength="50">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="password" class="form-control" name="Password" placeholder="@L("Account.Password")" required maxlength="50">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="RememberMe">
                                    <span class="ripple"></span>
                                    <span class="check"></span> @L("Account.RememberMe")
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <button id="LoginButton" type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("LogIn")</button>
                        </div>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>

<style>
    body{background:#6aa9e5}
    .wrapper{width:600px;margin:160px auto;background:#6aa9e5}
</style>