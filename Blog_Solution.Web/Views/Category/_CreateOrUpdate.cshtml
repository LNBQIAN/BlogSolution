@model CategoryModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelForModel(model => model.Name)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorForModel(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelForModel(model => model.Description)
                        </div>
                        <div class="col-md-9">
                            @Html.TextAreaForModel(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelForModel(model => model.Enabled)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorForModel(model => model.Enabled)
                            @Html.ValidationMessageFor(model => model.Enabled)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelForModel(model => model.ParentId)
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownListForModel(model => model.ParentId,Model.AvailableCategories)
                            @Html.ValidationMessageFor(model => model.ParentId)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelForModel(model => model.DisplayOrder)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorForModel(model => model.DisplayOrder)
                            @Html.ValidationMessageFor(model => model.DisplayOrder)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
